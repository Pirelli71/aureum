# Aureum DeFi Intelligence System - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# API Keys - DeFi Data Sources
# =============================================================================

# Coingecko API - Token prices, market data, pool information
# Get your API key from: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=your_coingecko_api_key_here

# Alchemy API - Node infrastructure, blockchain data, smart contract interactions
# Get your API key from: https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# The Graph API - Blockchain data indexing and subgraphs
# Get your credentials from: https://thegraph.com/studio/apikeys/
THE_GRAPH_API_KEY=your_the_graph_api_key_here
THE_GRAPH_API_TOKEN=your_the_graph_api_token_here

# =============================================================================
# Anthropic Claude API
# =============================================================================

# Claude API Key for agent operations (pay-per-use)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude Session Token (from Claude Pro/Team subscription)
# Alternative authentication method for Agents SDK
ANTHROPIC_SESSION_TOKEN=your_session_token_here

# =============================================================================
# Wallet Addresses
# =============================================================================

# Primary wallet address for portfolio monitoring
PRIMARY_WALLET=0x...

# Additional EVM-compatible wallet addresses (optional)
WALLET_ADDRESS_ETHEREUM=0x...
WALLET_ADDRESS_BSC=0x...
WALLET_ADDRESS_BASE=0x...
WALLET_ADDRESS_ARBITRUM=0x...
WALLET_ADDRESS_OPTIMISM=0x...
WALLET_ADDRESS_POLYGON=0x...

# =============================================================================
# Blockchain RPC Endpoints (Optional - use if not using Alchemy)
# =============================================================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# BNB Smart Chain (BSC)
BSC_RPC_URL=https://bnb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Base
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Solana (via Alchemy)
SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# =============================================================================
# Application Configuration
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Portfolio monitoring interval (seconds)
MONITOR_INTERVAL=60

# =============================================================================
# Database (if using local storage)
# =============================================================================

# Database URL (e.g., PostgreSQL, SQLite)
# DATABASE_URL=sqlite:///./aureum.db
